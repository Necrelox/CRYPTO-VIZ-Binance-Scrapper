{
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "Build/",
    ".idea",
    ".eslintignore",
    ".eslintrc",
    ".nvmrc",
    "esbuild.config.js",
    "jest.config.json",
    "package.json",
    "pnpm-lock.yaml",
    "wait-and-watch.js"
  ],
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./Source",
    "paths": {
      "@/*": ["./*"]
    },
    "allowUmdGlobalAccess": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "Build/",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "useUnknownInCatchVariables": true
  },
  "lib": [
    "esnext",
    "dom"
  ]
}
